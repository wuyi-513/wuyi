    <title>情趣互動網站</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #ffe6f2;
            padding-top: 50px;
        }
        h1 {
            color: #d63384;
        }
        #menu button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #d63384;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px;
            transition: background-color 0.3s ease;
        }
        #menu button:hover {
            background-color: #b12c6e;
        }
        #wheel, #truthDare, #questionnaire, #wishlist {
            display: none;
            margin-top: 20px;
        }
        #wheel {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 10px solid #d63384;
            position: relative;
            margin: 20px auto;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            transition: transform 5s cubic-bezier(0.33, 1, 0.68, 1);
        }
        .slice {
            width: 50%;
            height: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform-origin: 0% 0%;
            background-color: #f8bbd0;
            color: white;
            text-align: center;
            line-height: 150px;
            font-weight: bold;
        }
        #pointer {
            width: 0;
            height: 0;
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-bottom: 30px solid #d63384;
            margin: 0 auto;
        }
        #result, #truthDareResult, #wishlistResult {
            margin-top: 20px;
            font-size: 24px;
